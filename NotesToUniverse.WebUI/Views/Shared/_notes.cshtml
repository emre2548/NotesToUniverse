@model Note

<div class="col-md-8 mb-3">
    <div class="card" style="width: 34rem;">
        <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/475df672-bb32-410c-bd7f-b18e1e5cf327/det4gla-6a90780e-5ed8-40c9-912d-fa6e430dc289.png/v1/fill/w_1600,h_1067,q_80,strp/black_gold_by_shootingstarlogbook_det4gla-fullview.jpg?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..N4BeWtc9MrlRza8ooW30Q7Zlk_W85H-hjlOvjB5ZVKc" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.Owner</h5>
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Text</p>
            @*<a href="#" class="btn btn-primary">Go somewhere</a>*@
        </div>
        <div class="row col-md-12">
            <p class="col-md-6">
                @*<span></span>*@&nbsp;
                @if (@Model.LikeCount > 0)
                {
                    <i class="fas fa-heart"></i> @Model.LikeCount
                }
                else
                {
                    //TODO: @Model.LikeCount will delete
                    <i class="far fa-heart"></i> @Model.LikeCount
                }
                @* TODO: Fix comment button position *@
                <i class="far fa-thumbs-up"></i>
            </p>
            <p class="col-md-6 text-right">
                <a href="#" class="btn btn-primary">Yorumlar</a>
            </p>
        </div>
    </div>
</div>