    TODO add validation rules
*@
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Note" asp-action="Create" method="Post" enctype="multipart/form-data">
            @*@Html.ValidationSummary(false)*@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group-row">
                <label asp-for="Title" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Title" value="@Model.Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group-row">
                <label asp-for="Image" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input type="hidden" name="ImageUrl" value="@Model.Image" />
                    <img src="~/img/@Model.Image" width="80" id="imgPreview" />
                    <input type="file" name="file" value="" id="fileImage" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group-row">
                <label asp-for="Text" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Text" value="@Model.Text" class="form-control"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>

                </div>
            </div>
            <br />
            <div class="form-group-row">
                <div class="col-md-10 col-md-offset-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


