@model NoteModel
@{
    ViewData["Title"] = "CreateNote";
}

<h1>CreateNote</h1>

@section Scripts{
    
}


<form asp-controller="Admin" asp-action="CreateNote" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div class="form-text mb-3">
            <span class="input-group-text" id="basic-addon1">Başlık</span>
            <input asp-for="Title" type="text" class="form-control" placeholder="Text" aria-label="Not Başlığı" aria-describedby="basic-addon1">
        </div>
        <div class="form-text mb-3">
            <span class="input-group-text">Notunuz</span>
            <textarea asp-for="Text" class="form-control" aria-label="With textarea"></textarea>
        </div>
        <div class="form-check mb-3">
            <div class="col-md-10">

            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Taslak
            </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>